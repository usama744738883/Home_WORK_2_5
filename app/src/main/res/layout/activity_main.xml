<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#8DC139">

    <TextView
        android:id="@+id/jotaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/dio"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jotaro"
        android:layout_marginTop="50dp"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:paddingStart="30dp"/>
    <EditText
        android:id="@+id/pucci"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dio"
        android:layout_marginTop="3dp"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:paddingStart="30dp"/>
    <EditText
        android:id="@+id/zizi"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pucci"
        android:layout_marginTop="3dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:paddingStart="30dp"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="370dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/zizi"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow"
        android:paddingEnd="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:src="@drawable/ic_owl"
        android:id="@+id/ing"
        android:layout_marginTop="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ing"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"
        android:text="Trivia"/>




</androidx.constraintlayout.widget.ConstraintLayout>